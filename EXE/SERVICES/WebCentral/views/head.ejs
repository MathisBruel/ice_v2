<%- include ("common_script") %>
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>ICE</title>
        <style>
            html {
                height: 100%;
            }
            body {
                font: 13px Helvetica, Arial, sans-serif;
                background: url("background-ice2.png") no-repeat center center fixed;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
                margin: 0px;
                height: 100%;
                overflow: hidden;

            }
            .error {
                color: red
            }
            .result {
                border-bottom: 2px solid rgb(218, 148, 18);
                color:rgb(218, 148, 18);
                margin: 5px;
                padding: 10px;
                padding-right: 50px;
            }

            /* ---------------------- */
            /* navigation bar related */
            /* ---------------------- */
            #navigation {
                margin: 0px;
                padding:5px;
                height:10%;
                min-height: 92px;
                background:rgba(188, 200, 231, 0.3); 
                background-blend-mode: saturation;
                width: 100%;
                border-color: black;
                border-style: inset;
                border-width: 2px;
            }
            a.item {
                padding: 3px;
                margin-left : 10px;
                vertical-align: top;
                display: inline-block;
                text-align: center;
                text-decoration: none black;
                margin-top: 7px;
                color: black;
                font-weight: bold;
            }
            a.item:hover {
                background-color: gold;
            }
            .image-nav {
                height:90%;
                vertical-align: middle;
            }
            .image-link {
                height:70%;
                vertical-align: middle;
                margin-bottom: 10px;
            }
            .caption {
                display: block;
            }

            /* ------------- */
            /* block related */
            /* ------------- */
            .block {
                margin: auto;
                margin-top: 15px;
                padding: 0px;
                background:rgba(248, 248, 255, 0.3);
                border-color: black;
                border-style: groove;
                border-radius: 10px;
                width: 80%;
                height: 80%;
                font-weight: 700;
                overflow-y:auto;
            }
            h1 {
                margin: 0px;
                padding: 5px;
                background-color: rgba(12, 60, 136, 0.45);
                text-align: center;
                color:rgba(8, 13, 55, 0.8);
                font-style: italic;
            }
            h2 {
                margin: 20px;
                padding: 5px;
                background-color: rgb(83, 123, 156);
                text-align: left;
                color:rgba(9, 32, 46);
                font-weight: bolder;
                border-width: 2px;
                border-style: none;
                border-radius: 10px;
            }

            /* ----------------- */
            /* array related     */
            /* ----------------- */
            .image-line-add:hover {
                filter:grayscale(0);
            }
            .image-line-add {
                margin: 5px;
                max-width:40px;
                max-height:40px;
                vertical-align: middle;
                filter:grayscale(1);
            }
            .ul-model {
                list-style-type: none;
                display: grid;
                vertical-align: middle;
            }
            .li-model {
                margin-bottom: 5px;
                margin-right: 5px;
                margin-left: 5px;
                vertical-align: middle;
                border-bottom: 1px solid black;
                border-top: 1px solid black;
            }
            .li-model:hover {
                background-color: gold;
            }


            /* sub array related */
            ul.list {
                list-style-type: none;
                display: grid;
                vertical-align: middle;
            }
            li.list-item-general {
                margin-right: 5px;
                margin-left: 5px;
                vertical-align: middle;
            }
            .image-line-param {
                margin: 2px;
                max-width:30px;
                max-height:30px;
                vertical-align: middle;
            }
            .image-line-param[activated = "true"] {
                filter:grayscale(0);
            }
            .image-line-param[activated = "false"] {
                filter:grayscale(1);
            }
            li.list-item-none {
                margin-bottom: 5px;
                margin-right: 5px;
                vertical-align: middle;
                border-bottom: 1px solid black;
                border-top: 1px solid black;
            }
            li.list-item {
                margin-bottom: 5px;
                margin-right: 5px;
                vertical-align: middle;
                border-bottom: 1px solid black;
                border-top: 1px solid black;
            }
            li.list-item:hover {
                background-color: gold;
            }


            #panel {
                margin: 0px;
                padding:5px;
                width:5%;
                height:85%;
                background:rgba(221, 188, 231, 0.3); 
                background-blend-mode: saturation;
                border-color: black;
                border-style: inset;
                border-width: 2px;
                float: left;
            }
            
            .image-line {
                max-width:40px;
                max-height:40px;
                vertical-align: middle;
            }
            .image-lineEnd {
                max-width:40px;
                max-height:40px;
                vertical-align: middle;
                float: right;
            }
            
            .param {
                display: inline-block;
                text-align: center;
                vertical-align: middle;
                position: relative;
                padding-left: 5px;
                padding-right: 30px;
            }
            .parameter-line {
                padding-left: 10px;
                padding-right: 10px;
                padding-top: 5px;
            }
            .validation-line {
                padding: 10px;
                float: right;
            }

            .btn-mode-group button {
                background-color: rgb(43, 10, 57, 0.7); /* Green background */
                border: 1px solid rgb(126, 97, 124); /* Green border */
                color: white; /* White text */
                padding: 10px 24px; /* Some padding */
                cursor: pointer; /* Pointer/hand icon */
                float: left; /* Float the buttons side by side */
            }

            .btn-mode-group button[data-select="true"] {
                background-color: rgb(126, 97, 124);
            }

            .btn-mode-group button:not(:last-child) {
                border-right: none; /* Prevent double borders */
            }

            .btn-mode-group {
                display: inline-block;
                text-align: center;
            }

            /* Clear floats (clearfix hack) */
            .btn-mode-group:after {
                content: "";
                clear: both;
                display: table;
            }

            /* Add a background color on hover */
            .btn-mode-group button:not([data-select="true"]):hover {
                background-color: goldenrod;
            }
            ::-webkit-scrollbar {
                width: 20px;
            }

            /* Track */
            ::-webkit-scrollbar-track {
                box-shadow: inset 0 0 5px grey; 
                border-radius: 10px;
            }
            
            /* Handle */
            ::-webkit-scrollbar-thumb {
                background: rgb(2, 2, 38); 
                border-radius: 10px;
            }

            .modal {
                display: none; /* Hidden by default */
                position: fixed; /* Stay in place */
                z-index: 1; /* Sit on top */
                left: 0;
                top: 0;
                width: 100%; /* Full width */
                height: 100%; /* Full height */
                overflow: auto; /* Enable scroll if needed */
                background-color: rgba(128, 128, 128, 0.4); /* Black w/ opacity */
            }

                /* Modal Content/Box */
            .modal-content {
                margin: auto; /* 15% from the top and centered */
                width: 20%; /* Could be more or less, depending on screen size */
            }
            .img-loading {
                margin: 80% auto; /* 15% from the top and centered */
                height:20%;
                vertical-align: middle;
            }
        </style>
    </head>
    <body>