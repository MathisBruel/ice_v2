<style>
    .list-param {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }
    #color-device {
        width: 100%;
    }
    .list-param > button {
        grid-column: 1 / 3;
    }
    .list-param > hr {
        grid-column: 1 / 3;
    }
</style>

<div class="block" style="display: none;" id="controlDevice">
    <h1 id="control-title">Control</h1>

    <div class="list-param">
        <label>Color</label>
        <input type="color" id='color-device'>
        <hr/>

        <label class="par-control">White</label>
        <input class="par-control" id="white" type="number" min="0" max="255" value="0">
        <label class="par-control">Intensity</label>
        <input class="par-control" id="intensity" type="number" min="0" max="255" value="0">
        <label class="par-control">Zoom</label>
        <input class="par-control" id="zoom" type="number" min="0" max="255" value="0">
        <hr class="par-control"/>


        <label class="mh-control" >Ratio X</label>
        <input class="mh-control" id="x" type="number" min="0" max="1" step="0.01" value="0">
        <label class="mh-control" >Ratio Y</label>
        <input class="mh-control" id="y" type="number" min="0" max="1" step="0.01" value="0">
        <hr class="mh-control" />

        <label class="force" >Force</label>
        <input class="force"  type="checkbox" id="force">
        <label class="lut">LUT to apply</label>
        <input class="lut" type="checkbox" id="lut-to-apply">
        <button class="force" type="button" disabled id="unforce-button">Unforce</button>
        <button type="button" id="play-button" onclick="play()">Play</button>
        <hr/>
        
        
        <label class="lut">Current LUT</label>
        <label class="lut" id="currentLUT"></label>
        <label class="lut">LUT</label>
        <select class="lut" id="lut-select" style="text-align-last: center;">
            <option value="NONE" style="direction: rtl;">None</option>
        </select>
        <button class="lut" type="button" id="change-button">Change</button>
    </div>

</div>